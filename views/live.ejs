<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ReciLive</title>
    <link rel="icon" type="image/png" sizes="96x96" href="../static/img/logo/favicon-96x96.png">
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- CSS Library -->
    <link href="/static/css/library/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="/static/css/library/materialize.min.css">
    <link href="/static/css/library/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="/static/css/library/colorPicker.css" rel="stylesheet" type="text/css">
    <link href="/static/css/library/colorPicker.css" rel="stylesheet" type="text/css">
    <link href="/static/css/library/jquery-ui.min.css" rel="stylesheet" type="text/css">
    <link href="/static/css/library/jquery-ui.structure.min.css" rel="stylesheet" type="text/css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" type="text/css" />
    <!-- JS Library -->
    <script src="/static/javascript/jquery-3.1.1.js"></script>
    <script src="../static/javascript/bootstrap.min.js"></script>
    <script src="/static/javascript/library/materialize.min.js"></script>
    <script src="/static/javascript/library/fabric.js"></script>
    <script src="/static/javascript/library/jquery.colorPicker.min.js"></script>
    <script src="/static/javascript/library/jquery-ui.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <!-- Our CSS -->
    <link href="../static/css/live.css" rel="stylesheet" type="text/css">

    <script src="/static/javascript/vex.combined.min.js"></script>
    <link href="/static/css/library/vex.css" rel="stylesheet" type="text/css">
    <link href="/static/css/library/vex-theme-default.css" rel="stylesheet" type="text/css">
    <script>vex.defaultOptions.className = 'vex-theme-default'</script>
    <script src="/static/javascript/css-element-query.js"></script>

    <script src="/static/javascript/transaction_system.js"></script>
    <script src="/static/javascript/module/discussion_board.js"></script>
    <script src="/static/javascript/module/chat_module.js"></script>
    <script src="/static/javascript/module/slide_module.js"></script>
    <script src="/static/javascript/module/sound_control_module.js"></script>
    <script src="/static/javascript/module/draw_module.js"></script>
    <script src="/static/javascript/sound_system.js"></script>
    <script src="/static/javascript/resampler.js"></script>
    <script src="/static/javascript/Queue.src.js"></script>
    <script src="/static/javascript/view_manager.js"></script>
    <script src="/static/javascript/timeline.js"></script>
</head>

<body>
<nav class="navbar">
    <img src="../static/img/closed.png" class="rec-ended-notification">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <img src="../static/img/logo/android-icon-48x48.png">
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="#"><%= username %></a></li>
            </ul>
        </div>
    </div>
</nav>

<div class="recitation-info">
    <div class="side-bar">
        <span class="fa fa-hand-paper-o fa-2x microphone" onclick="viewStudentList()"></span>
        <span class="fa fa-comments fa-2x chat" onclick="viewInfoBoard()"></span>
        <!-- Modal Trigger For Slides-->
        <a href="#modal1"><span class="fa fa-window-restore fa-2x slides"></span></a>
        <!-- Modal Structure For Slides-->
        <div id="modal1" class="modal bottom-sheet">
            <div class="modal-content" id="slides-selector">
            </div>
        </div>
        <div class="fixed-action-btn horizontal" id="draw">
            <span class="fa fa-pencil-square fa-3x"></span>
            <ul id="draw-control-panel">
                <li id="pencil-box"><a class="btn-floating red"><i class="fa fa-pencil"></i></a></li>
                <li><input id="draw-color-picker" class="btn-floating blue" type="text" value="#333399"/></li>
                <li id="eraser-box"><a class="btn-floating blue"><i class="fa fa-eraser"></i></a></li>
                <li id="clear-box"><a class="btn-floating cyan"><i class="fa fa-window-close"></i></a></li>
            </ul>
        </div>
        <!-- <img src="../static/img/shut-down.png" class="ending-controller"> -->
        <span class="fa fa-power-off fa-3x ending-controller"></span>
    </div>
    <div class="student-list">
        <h4>student<i class="fa fa-microphone student-microphone"></i></h4>
    </div>
    <div class="col-md-6" id="slide-stage">
        <div class="stage-view"></div>
        <div class="slide-nav">
            <label id="previous-slide" class="slide-prev">&#x2039;</label>
            <label id="next-slide" class="slide-next">&#x203a;</label>
        </div>
        <div id='slider-div'>
            <input class="slider__range" type="range" value="100" min="0" step="0.000001" max="100">
        </div>
    </div>
    <div class="col-md-4" id="info-board">
        <div class="fixed-action-btn horizontal">
            <a class="btn-floating btn-large waves-effect waves-light red" id="post-submit"><i
                        class="material-icons">add</i></a>
            <ul>
                <li><input type="text" name="text" id="info-post"></input></li>
            </ul>
        </div>
    </div>
</div>

<script>
    classroomNumber = parseInt('<%= classroomNumber %>');
    userID = "<%= userID %>";
</script>
<script src="/static/javascript/live.js"></script>
</body>
</html>
